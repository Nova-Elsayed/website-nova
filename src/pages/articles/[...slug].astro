---
import { contentfulClient } from "../../lib/contentful";
import type { Article } from "../../lib/contentful";
import ArticleLayout from "../../layouts/Article.astro";
import { documentToHtmlString } from "@contentful/rich-text-html-renderer";

export async function getStaticPaths() {
  const entries = await contentfulClient.getEntries<Article>({
    content_type: "article",
  });

  const pages = entries.items.map((item) => ({
    params: { slug: item.fields.slug },
    props: {
      title: item.fields.title,
      slug: item.fields.slug,
      image: item.fields.image,
      content: documentToHtmlString(item.fields.content),
    },
  }));
  return pages;
}

const { content, title, slug, image } = Astro.props;
---

<ArticleLayout content={content} title={title} slug={slug} image={image} />
