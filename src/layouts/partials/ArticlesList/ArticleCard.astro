---
import { simpleGermanDate } from "@/lib/utils/dateParser";
import RichTextContainer from "@/components/RichTextContainer.astro";

const { title, description, slug, publishedAt } = Astro.props.data.props;

const readableDate = simpleGermanDate(publishedAt);
---

<li class="mt-16 mb-24">
  <a
    class="block transition-all group hover:scale-110"
    href={`/articles/${slug}/`}
  >
    <h3
      set:html={title}
      class="mb-2 text-2xl text-stone-600 group-hover:text-red-400"
    />
    {readableDate && <p class="mb-4 text-sm" set:html={readableDate} />}
    {
      description && (
        <div class="mx-auto prose rich-text-container">
          <p class="text-left" set:html={description} />
          <p class="text-sm italic text-center transition-opacity opacity-0 text-stone-500 group-hover:opacity-100">
            weiterlesen…
          </p>
          <p class="text-sm text-center text-stone-500">— &#10086; —</p>
        </div>
      )
    }
  </a>
</li>
